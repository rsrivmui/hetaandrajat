<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Heta × Rajat</title>
    <meta name="description" content="Heta & Rajat — Light within light." />

    <link rel="stylesheet" href="/global.css" />
  </head>

  <body>
    <main class="hero">
      <h1>Heta × Rajat</h1>
      <p class="tagline">Light within light.</p>
      <div id="countdown" class="countdown">Loading…</div>
    </main>

    <script is:inline>
      (() => {
        const targetISO = "2026-02-05T00:00:00+05:30"; // IST target
        const target = new Date(targetISO).getTime();
        const el = document.getElementById("countdown");

        function pad(n) {
          return String(n).padStart(2, "0");
        }

        function tick() {
          const now = Date.now(); // user's current time
          let diff = target - now;

          if (diff <= 0) {
            el.textContent = "It's time ✨";
            return;
          }

          const days = Math.floor(diff / (1000 * 60 * 60 * 24));
          diff %= 1000 * 60 * 60 * 24;

          const hours = Math.floor(diff / (1000 * 60 * 60));
          diff %= 1000 * 60 * 60;

          const mins = Math.floor(diff / (1000 * 60));
          diff %= 1000 * 60;

          const secs = Math.floor(diff / 1000);

          el.textContent = `${days} days · ${pad(hours)}:${pad(mins)}:${pad(secs)} (IST)`;
        }

        tick();
        setInterval(tick, 1000);
      })();
    </script>
  </body>
</html>
